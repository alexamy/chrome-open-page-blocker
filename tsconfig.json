{
  "include": ["src/**/*.ts"],
  "compilerOptions": {
    "target": "esnext",
    "lib": ["esnext", "DOM", "DOM.Iterable"],

    "module": "nodenext",
    "moduleResolution": "nodenext",
    "esModuleInterop": false,

    "outDir": "./dist",

    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "erasableSyntaxOnly": true,
    "skipLibCheck": true
  }
}
