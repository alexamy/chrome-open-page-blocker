{
  "include": ["src/**/*.ts"],
  "compilerOptions": {
    "target": "esnext",
    "lib": ["esnext", "DOM", "DOM.Iterable"],
    "types": ["chrome-types", "@testing-library/jest-dom"],

    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmit": true,

    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "erasableSyntaxOnly": true,
    "skipLibCheck": true
  }
}
