{
  "include": ["popup/**/*.ts", "content/**/*.ts"],
  "compilerOptions": {
    "target": "esnext",
    "lib": ["esnext", "DOM", "DOM.Iterable"],

    "module": "nodenext",
    "moduleResolution": "nodenext",

    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "erasableSyntaxOnly": true,
    "skipLibCheck": true
  }
}
