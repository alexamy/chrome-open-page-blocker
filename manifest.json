{
  "name": "Open page blocker",
  "description": "Block the opening of a specific page",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": "images/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content.js"]
    }
  ],
  "background": {
    "service_worker": "dist/service-worker.js",
    "type": "module"
  },
  "permissions": ["activeTab", "storage", "tabs"]
}
